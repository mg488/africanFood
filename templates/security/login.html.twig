{% extends 'base.html.twig' %}

{% block title %}Se connecter - african Food {% endblock %}

{% block content %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal display-4">Merci de vous connecter</h1>
    <hr>

    <div class="row pt-5 mx-auto">
        <div class="col-lg-2"><label for="inputEmail">Votre Email :</label></div>
        <div class="col-lg-6"><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" laceholder="votre eadresse mail" autocomplete="email" required autofocus></div>
    </div>
    <div class="row pt-2 mx-auto">
        <div class="col-lg-2"><label for="inputPassword">Votre Mot de Passe : </label></div>
        <div class="col-lg-6"><input type="password" name="password" id="inputPassword" class="form-control" placeholder="votre mot de passe" autocomplete="current-password" required></div>

    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="float-right">
    <button class="btn btn-outline-info btn-sm mt-3 mb-5 offset-7" type="submit">
        Se connecter
    </button></div>
    <hr>
</form>
{% endblock content %}
