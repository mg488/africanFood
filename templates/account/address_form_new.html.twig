{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresses - african Food {% endblock %}

{% block content  %}
<h1 class="display-4 pb-3">Gérer mes adresses</h1>
    <hr>
    <a href="{{ path('acount_address') }}">Retourner à mes adresses</a><br>

    {{ form_start(form) }}
    <div class="row mt-4">
        <div class="col-md-12 mb-3">{{ form_row(form.name) }}</div>
        <div class="col-md-6 mb-3">{{ form_row(form.firstname) }}</div>
        <div class="col-md-6 mb-3">{{ form_row(form.lastname) }}</div>
        <div class="col-md-6 mb-3">{{ form_row(form.comapny) }}</div>
        <div class="col-md-6 mb-3">{{ form_row(form.address) }}</div>
        <div class="col-md-6 mb-3">{{ form_row(form.postal) }}</div>
        <div class="col-md-6 mb-3">{{ form_row(form.city) }}</div>
        <div class="col-md-6 mb-3">{{ form_row(form.country) }}</div>
        <div class="col-md-6 mb-5">{{ form_row(form.phone) }}</div>
    </div>

    {{ form_end(form) }}

{% endblock %}